<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.09"
        android:text="Ver primero Genero"
        android:textSize="16sp"
        android:textAlignment="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_weight="0.31"
        android:orientation="horizontal"
        android:weightSum="1">

        <Button
            android:id="@+id/bAction"
            android:layout_width="71dp"
            android:layout_height="wrap_content"
            android:text="Action"
            android:textAppearance="@style/TextAppearance.AppCompat" />

        <Button
            android:id="@+id/bDrama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Drama"
            android:textAppearance="@style/TextAppearance.AppCompat" />

        <Button
            android:id="@+id/bHorror"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Horror"
            android:textAppearance="@style/TextAppearance.AppCompat" />

        <Button
            android:id="@+id/bRomance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Romance"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="12sp" />

    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_weight="0.13">

        <Button
            android:id="@+id/bCrime"
            android:layout_width="69dp"
            android:layout_height="wrap_content"
            android:text="Crime"
            android:textAppearance="@style/TextAppearance.AppCompat" />

        <Button
            android:id="@+id/bThriller"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thriller"
            android:textAppearance="@style/TextAppearance.AppCompat" />

        <Button
            android:id="@+id/bFantasy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fantasy"
            android:textAppearance="@style/TextAppearance.AppCompat" />

        <Button
            android:id="@+id/bAdventure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="4.08"
            android:text="Adventure"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="12sp" />

    </LinearLayout>

    <ListView
        android:id="@+id/list_item"
        android:layout_width="match_parent"
        android:layout_height="301dp"
        android:dividerHeight="5dp"
        android:listSelector="@drawable/list_row_select"

        android:layout_weight="0.16">
    </ListView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:text="Mostrar mÃ¡s..."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnMostrarMas"
            android:textAppearance="@style/TextAppearance.AppCompat" />

    </LinearLayout>

</LinearLayout >
