<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:weightSum="1">


    <TextView
        android:id="@+id/txt"
        android:layout_width="333dp"
        android:layout_height="20dp"
        android:text="Ver primero Genero"
        android:textAlignment="center"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_weight="0.00"
        android:orientation="horizontal"
        android:weightSum="1">

        <Button
            android:id="@+id/bAction"
            android:layout_width="66dp"
            android:layout_height="wrap_content"
            android:text="Action"
            android:textAppearance="@style/TextAppearance.AppCompat" />

        <Button
            android:id="@+id/bDrama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Drama"
            android:textAppearance="@style/TextAppearance.AppCompat" />

        <Button
            android:id="@+id/bHorror"
            android:layout_width="77dp"
            android:layout_height="wrap_content"
            android:text="Horror"
            android:textAppearance="@style/TextAppearance.AppCompat" />

        <Button
            android:id="@+id/bRomance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Romance"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="12sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bCrime"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:text="Crime"
            android:textAppearance="@style/TextAppearance.AppCompat" />

        <Button
            android:id="@+id/bThriller"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thriller"
            android:textAppearance="@style/TextAppearance.AppCompat" />

        <Button
            android:id="@+id/bFantasy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fantasy"
            android:textAppearance="@style/TextAppearance.AppCompat" />

        <Button
            android:id="@+id/bAdventure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Adventure"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="12sp"
            android:layout_weight="0.05" />

    </LinearLayout>

    <TextView
        android:id="@+id/textSinFavoritos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/list_item"
        android:layout_width="match_parent"
        android:layout_height="318dp"
        android:dividerHeight="5dp"
        android:listSelector="@drawable/list_row_select"

        android:layout_weight="0.48">
    </ListView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </LinearLayout>

</LinearLayout >
